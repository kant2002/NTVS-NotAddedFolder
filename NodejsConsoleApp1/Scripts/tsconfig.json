{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "buildOnSave": false,
  "exclude": [
    "node_modules",
    "public"
  ]
}
